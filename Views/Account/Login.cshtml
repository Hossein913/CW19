@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<h2 class="text-center my-4">Sign in to your account</h2>

<form asp-controller="Account" asp-action="Login" class="my-3" method="post">
    <div class="form-group">
        <label for="Email"><i class="fa fa-user"></i> Email Address</label>
        <input type="email" name="EmailAddress" class="form-control mb-4 mt-1" placeholder="Required Email Address" required>
    </div>
    <div class="form-group">
        <label for="Password"><i class="fa fa-lock"></i> Password</label>
        <input type="password" name="Password" class="form-control mb-4 mt-1" placeholder="Required Password" required>
    </div>
    <button type="submit" class="btn btn-primary w-100"><i class="fa fa-sign-in"></i> Sign in</button>
</form>
<a class="btn btn-secondary btn-sm" asp-controller="Home" asp-action="Index">Back</a>